<resources>

    <!-- Base application theme. -->
    <style name="ElloTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/ello_black</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/ello_white</item>
        <item name="android:textColorLink">@color/ello_white</item>

        <item name="titleTextAppearance">@style/ElloTheme.Title</item>
        <item name="subtitleTextAppearance">@style/ElloTheme.SubTitle</item>

    </style>

    <style name="ElloTheme.Title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ElloTheme.SubTitle" parent="TextAppearance.AppCompat.Subhead" />

    <style name="ElloTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?android:attr/selectableItemBackground</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorColor">@color/ello_black</item>
        <item name="tabSelectedTextColor">@color/ello_black</item>
    </style>

</resources>
