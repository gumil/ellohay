<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_default_height"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/editorialImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_default_height"
        android:foreground="@color/ello_foreground"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="?attr/titleTextAppearance" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:paddingBottom="@dimen/default_padding"
            android:textAppearance="?attr/subtitleTextAppearance" />
    </RelativeLayout>
</FrameLayout>